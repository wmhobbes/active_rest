require 'rubygems'
require 'rake'

begin
  require 'jeweler'

  Jeweler::Tasks.new do |s|
    s.name = 'embedded-models'
    s.summary = 'Adds the :embedded attribute in has_many, has_one and belongs_to to represent objects embedded in a main object'
    s.email = 'daniele@orlandi.com'
    s.homepage = 'http://www.yggdra.it/'
    s.description = ''
    s.authors = ['Daniele Orlandi']
    s.files = FileList['[A-Z]*.*', '{lib,spec,config,ext}/**/*', 'VERSION']
  end
rescue LoadError
  puts 'Jeweler not available. Install it with: sudo gem install jeweler -s http://gemcutter.org'
end

require 'rspec/core/rake_task'
RSpec::Core::RakeTask.new do |spec|
  spec.pattern = 'spec/**/*_spec.rb'
  spec.rspec_opts = ['-f progress', '-r ./spec/spec_helper.rb', '--color', '--backtrace']
end

require 'rake/rdoctask'
desc 'Generate documentation'
Rake::RDocTask.new(:rdoc) do |rdoc|
  rdoc.rdoc_dir = 'rdoc'
  rdoc.title    = 'Embedded Models'
  rdoc.options << '--line-numbers' << '--inline-source'
  rdoc.rdoc_files.include('README', 'NOTICE')
  rdoc.rdoc_files.include('lib/embedded_models.rb')
  rdoc.rdoc_files.include('lib/embedded_models/**/*.rb')
end


